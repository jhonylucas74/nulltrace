{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "nulltrace",
  "version": "0.1.0",
  "identifier": "app.nulltrace.client",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:1420",
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build",
    "removeUnusedCommands": true
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "nulltrace",
        "width": 1024,
        "height": 700,
        "resizable": true,
        "center": true
      }
    ],
    "security": {
      "csp": {
        "default-src": "'self'",
        "script-src": "'self'",
        "connect-src": "ipc: http://ipc.localhost",
        "font-src": "'self' https://fonts.gstatic.com",
        "img-src": "'self' asset: data: blob:",
        "style-src": "'unsafe-inline' 'self' https://fonts.googleapis.com"
      }
    }
  },
  "bundle": {
    "active": true,
    "icon": ["icons/icon.png"],
    "resources": [],
    "externalBin": [],
    "copyright": "",
    "category": "Game",
    "shortDescription": "Nulltrace - hacker game client",
    "longDescription": "Linux-style desktop simulator for the Nulltrace online hacker game."
  }
}
